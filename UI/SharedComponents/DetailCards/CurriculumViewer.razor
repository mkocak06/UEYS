@using Shared.ResponseModels
<MyModal @ref="_curriculumViewerModal" ShowFooter="false" ShowHeader="false">
    <Body>
         <div>
            <ul class="nav nav-pills" id="myTab1" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab-1" data-toggle="tab" href="#home-1">
                        <span class="nav-icon">
                            <i class="flaticon2-chat-1"></i>
                        </span>
                        <span class="nav-text">@L["Curriculum Info"]</span>
                    </a>
                </li>
            </ul>
            @if (Curriculum is not null)
            {
                <div class="tab-content mt-5" id="myTabContent1">
                    <div class="tab-pane fade show active" id="home-1" role="tabpanel" aria-labelledby="home-tab-1">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="p-0 w-250px"></th>
                                    <th class="p-0"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="font-weight-bolder">@L["Version"]</td>
                                    <td>@(Curriculum.Version??"-")</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bolder">@L["_name", L["Expertise Branch"]]</td>
                                    <td>@(Curriculum.ExpertiseBranch?.Name??"-")</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bolder">@L["Education Field"]</td>
                                    <td>@(Curriculum.ExpertiseBranch?.Profession?.Name??"-")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            }                   
            else
            {
                @L["No data to display"]
            }
        </div>
    </Body>
</MyModal>

@code {
    [Parameter]
    public CurriculumResponseDTO Curriculum{ get; set; }

    private MyModal _curriculumViewerModal;

    public void OpenModal()
    {
        _curriculumViewerModal.OpenModal();
    }

    public void CloseModal()
    {
        _curriculumViewerModal.CloseModal();
    }
}