@using ApexCharts;
@using Shared.ResponseModels.StatisticModels
@inherits FluxorComponent
@if (_chartLoaded)
{
    <ApexChart @ref="_apexChart" TItem="ActivePassiveResponseModel" Height="500" Title="Üst Kuruma Bağlı Kurum Sayısı"
               Width="600" Options="_options">

        <ApexPointSeries TItem="ActivePassiveResponseModel"
                         Items="hospitalCounts"
                         Name="Kurum Sayısı"
                         XValue="@(e => {string lcl = L[e.SeriesName];
                                         return lcl;})"
                         YAggregate="@(e => e.Sum(e => e.ActiveRecordsCount))"
                         SeriesType="SeriesType.Bar" />

    </ApexChart>

}