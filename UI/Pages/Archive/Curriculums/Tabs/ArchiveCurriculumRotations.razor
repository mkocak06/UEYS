@page "/archive/archivecurriculumrotations/"
@using Shared.Types
@using UI.SharedComponents.Components
@using Shared.ResponseModels
@inherits FluxorComponent

@if (_curriculumRotations != null)
{
    <Grid IsFilter="false" Items="_curriculumRotations" Sort="_filter.Sort.FirstOrDefault()" OnSortChanged="sort => OnSortChange(sort)" class="table table-hover table-bordered " RowClass='(row, index) => ""'>
        <GridColumn Sort="Rotation.ExpertiseBranch.Name" TRowData="CurriculumRotationResponseDTO" Title="@L["Rotation Branch"]">
            <ChildContent>
                @context.Rotation?.ExpertiseBranch?.Name
            </ChildContent>
            <FilterTemplate Context="filter">
                <div class="form-group mb-0">
                    <div class="input-icon input-icon-right">
                        <input type="text" class="form-control" name="@filter" @onchange='(args) => OnChangeFilter(args, filter)' autocomplete="false">
                        @if (IsFiltered(filter))
                        {
                            <span class="cursor-pointer" @onclick='() => OnResetFilter(filter)'>
                                <i class="flaticon2-cross icon- text-danger"></i>
                            </span>
                        }
                        else
                        {
                            <span class="cursor-pointer">
                                <i class="flaticon2-search-1 icon-md"></i>
                            </span>
                        }
                    </div>
                </div>
            </FilterTemplate>
        </GridColumn>
        <GridColumn Sort="Curriculum..ExpertiseBranch.Name" TRowData="CurriculumRotationResponseDTO" Title="@L["Curriculum"]">
            <ChildContent>
                @context.Curriculum?.ExpertiseBranch?.Name
            </ChildContent>
            <FilterTemplate Context="filter">
                <div class="form-group mb-0">
                    <div class="input-icon input-icon-right">
                        <input type="text" class="form-control" name="@filter" @onchange='(args) => OnChangeFilter(args, filter)' autocomplete="false">
                        @if (IsFiltered(filter))
                        {
                            <span class="cursor-pointer" @onclick='() => OnResetFilter(filter)'>
                                <i class="flaticon2-cross icon- text-danger"></i>
                            </span>
                        }
                        else
                        {
                            <span class="cursor-pointer">
                                <i class="flaticon2-search-1 icon-md"></i>
                            </span>
                        }
                    </div>
                </div>
            </FilterTemplate>
        </GridColumn>
        <GridColumn Sort="Curriculum.Version" TRowData="CurriculumRotationResponseDTO" Title="@L["Version"]">
            <ChildContent>
                @context.Curriculum?.Version
            </ChildContent>
            <FilterTemplate Context="filter">
                <div class="form-group mb-0">
                    <div class="input-icon input-icon-right">
                        <input type="text" class="form-control" name="@filter" @onchange='(args) => OnChangeFilter(args, filter)' autocomplete="false">
                        @if (IsFiltered(filter))
                        {
                            <span class="cursor-pointer" @onclick='() => OnResetFilter(filter)'>
                                <i class="flaticon2-cross icon- text-danger"></i>
                            </span>
                        }
                        else
                        {
                            <span class="cursor-pointer">
                                <i class="flaticon2-search-1 icon-md"></i>
                            </span>
                        }
                    </div>
                </div>
            </FilterTemplate>
        </GridColumn>
        <GridColumn Sort="Curriculum.EffectiveDate" TRowData="CurriculumRotationResponseDTO" Title="@L["Effective Date"]">
            <ChildContent>
                @context.Curriculum?.EffectiveDate
            </ChildContent>
            <FilterTemplate Context="filter">
                <div class="form-group mb-0">
                    <div class="input-icon input-icon-right">
                        <input type="text" class="form-control" name="@filter" @onchange='(args) => OnChangeFilter(args, filter)' autocomplete="false">
                        @if (IsFiltered(filter))
                        {
                            <span class="cursor-pointer" @onclick='() => OnResetFilter(filter)'>
                                <i class="flaticon2-cross icon- text-danger"></i>
                            </span>
                        }
                        else
                        {
                            <span class="cursor-pointer">
                                <i class="flaticon2-search-1 icon-md"></i>
                            </span>
                        }
                    </div>
                </div>
            </FilterTemplate>
        </GridColumn>
        <GridColumn Sort="Rotation.Duration" TRowData="CurriculumRotationResponseDTO" Title="@L["Rotation Time (Day)"]">
            <ChildContent>
                @context.Rotation?.Duration
            </ChildContent>
            <FilterTemplate Context="filter">
                <div class="form-group mb-0">
                    <div class="input-icon input-icon-right">
                        <input type="text" class="form-control" name="@filter" @onchange='(args) => OnChangeFilter(args, filter)' autocomplete="false">
                        @if (IsFiltered(filter))
                        {
                            <span class="cursor-pointer" @onclick='() => OnResetFilter(filter)'>
                                <i class="flaticon2-cross icon- text-danger"></i>
                            </span>
                        }
                        else
                        {
                            <span class="cursor-pointer">
                                <i class="flaticon2-search-1 icon-md"></i>
                            </span>
                        }
                    </div>
                </div>
            </FilterTemplate>
        </GridColumn>
        <GridColumn class="min-w-100px align-middle" TRowData="CurriculumRotationResponseDTO" Title="@L["Transactions"]">
            <PermissionWrapper Permissions="new List<PermissionEnum>(){PermissionEnum.ArchiveUndeleteCurriculumRotation}">
            <a @onclick="() => OnUndeleteHandler(context)" class="btn btn-light-danger btn-icon btn-sm"><i title=@L["Take Back"] class="fas fa-trash-restore-alt"></i></a>
            </PermissionWrapper>
        </GridColumn>
    </Grid>
    <Pagination Action="PaginationHandler" Count="_paginationModel.TotalItemCount" Page="_paginationModel.Page"
            DefaultPageSize="10" Loading="_loading">
    </Pagination>
}
else
{
    <Spinner></Spinner>
}
